@model IEnumerable<LINQ.Models.Employee>

@{
    ViewData["Title"] = "Group By";
}

<h4>All employees grouped by age with name and salary listed</h4>

<div class="row">
    @foreach (var agegroup in Model.GroupBy(e => e.Age))
    {
        <div class="col-md-4 text-white">
            
            <div class="card bg-primary mb-4 p-1">
                <div class="card-title"> Age: @agegroup.Key</div>
                <p>Employee Count: @agegroup.Count()</p>
                @foreach (Employee e in agegroup)
                {
                    <p><b> Name:</b> @e.FullName <br />
                    <b>Employee Salary:</b> $@e.Salary</p>
                }

            </div>
    

        </div>
    }
</div>
